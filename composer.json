{
  "name": "necktie/newsletter",
  "description": "Necktie Newsletter bundle",
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Trinity Team",
      "email": "info@modpreneur.com"
    }
  ],

  "require": {
    "php": ">=7",
    "symfony/framework-bundle": ">=2.8",
    "nette/utils": "~2.3",
    "trinity/framework": "dev-master",
    "dmishh/settings-bundle" : "dev-master",
    "twig/extensions" : ">=1.3",
    "sensio/framework-extra-bundle": "^3.0"
  },

  "require-dev": {
    "phpunit/phpunit": "5.1.*",
    "mockery/mockery": "~0.9",
    "symfony/var-dumper": "~3.0"
  },

  "autoload": {
    "psr-4": { "Necktie\\Bundle\\NewsletterBundle\\": "" },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  },

  "minimum-stability": "dev",
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  }
}
